[
  {
    "id": 1,
    "title": "मात्र एकपल",
    "author": "लेखक अज्ञात",
    "lines": [
      "मात्र एकपलको साथ चाहियो,",
      "जीवन बदल्न सक्ने विश्वास चाहियो।",
      "सपना साँचिन मन लाग्छ,",
      "अझै केही गर्न बाँकी छ।"
    ]
  },
  {
    "id": 2,
    "title": "पहाडको मन",
    "author": "कविता गुरुङ",
    "lines": [
      "पहाडले भने मलाई, चिच्याएर बोल,",
      "मेरो काखमा लुकेका छन् भावना खोल।",
      "म मौन छु, तर गहिरो छु,",
      "मेरो शिरमाथि आकाश छ।"
    ]
  },
  {
    "id": 3,
    "title": "बिर्सन सकिन",
    "author": "शिव खनाल",
    "lines": [
      "बिर्सन खोजें तिमीलाई, सम्झनाको खोलो बग्यो।",
      "अनायासै तिम्रो हासोले, मेरो मन भरियो।",
      "नभन अब तिमी छैनौ,",
      "तिमी मेरो कविता हौ।"
    ]
  },
  {
    "id": 4,
    "title": "शान्ति",
    "author": "मनोज अधिकारी",
    "lines": [
      "हातमा फूल लिएर हिंड,",
      "हातमा हतियार होइन।",
      "शब्दमा माया पोख,",
      "घृणालाई बिर्सिदेऊ।"
    ]
  },
  {
    "id": 5,
    "title": "झरना",
    "author": "सिता कँडेल",
    "lines": [
      "पानीको झरनाझैं छ मेरो मन,",
      "अविरल बगिरहेछ बिना थाक।",
      "कसैले सम्हाल्न खोजे पनि,",
      "स्वतन्त्र छ यो, जस्तै हावा।"
    ]
  },
  {
    "id": 6,
    "title": "घाम",
    "author": "सागर न्यौपाने",
    "lines": [
      "घाम झुल्कियो आज फेरि,",
      "सपना बोकेर आयो उज्याली।",
      "हिजोका आँसु पोख्दै,",
      "भोलिका आशा बनाउँदै।"
    ]
  },
  {
    "id": 7,
    "title": "माया",
    "author": "बिजय दाहाल",
    "lines": [
      "माया भन्नु नाम हो,",
      "नदेखिने तर गहिरो भाव हो।",
      "नजोडिएको देखिए पनि,",
      "मनमा गाँसिएको नाता हो।"
    ]
  },
  {
    "id": 8,
    "title": "सपनाको पाखा",
    "author": "अनु शर्मा",
    "lines": [
      "सपनाको पाखा उड्दै छु म,",
      "सत्यको खोजीमा टाढा पुग्दै।",
      "थाक्दिन म कहिल्यै,",
      "किनभने विश्वास अझै बाँकी छ।"
    ]
  },
  {
    "id": 9,
    "title": "हावाको गीत",
    "author": "लेखक अज्ञात",
    "lines": [
      "हावा गुञ्जन्छ कानमा,",
      "भनिरहेछ गुनासो कतैको।",
      "उसको गति जस्तै,",
      "मन पनि अडिन्छ कहाँ।"
    ]
  },
  {
    "id": 10,
    "title": "रातको सन्देश",
    "author": "राजन कार्की",
    "lines": [
      "रात आएपछि तिमी सम्झिन्छौ,",
      "तारा हेरिरहन्छौ अध्यारोमा।",
      "शान्त छ सबैकुरा,",
      "तर मनमा आवाज घन्किन्छ।"
    ]
  }
]
